<% if current_user.participant? %>
  <ul id="tab_navigation">
    <% if current_user.managed? %>
      <%= render_tab :your_feedback, reviews_path, on_your_feedback_tab? %>
    <% end %>

    <% if current_user.manages? %>
      <%= render_tab :your_direct_reports, users_path, on_direct_reports_tab? %>
    <% end %>

    <%= render_tab :feedback_requests, replies_path, on_feedback_requests_tab? %>
  </ul>
<% end %>
