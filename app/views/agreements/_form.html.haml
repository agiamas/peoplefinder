= simple_form_for @agreement do |f|

  %fieldset
    = f.error_notification

    %h2 Personal details
    .form-group
      = f.input :manager_email, as: :string

    %h2 Headcount responsibilities
    .form-group
      = f.input :number_of_staff, as: :text

    .form-group
      = f.input :staff_engagement_score, as: :text

    .actions
      = f.submit 'Save'
