- content_for :head do
  = javascript_include_tag "application"
  = stylesheet_link_tag "application", media: :all
- content_for :content do
  .class
    %main#content{role: 'main'}
      - if Rails.application.config.respond_to?(:phase)
        = render partial: 'layouts/partials/phase'
      = flash_messages
      .inner-block
        .top-left= yield :back_link
        .top-right= yield :top_right
        %h1= content_for?(:page_title) ? yield(:page_title) : app_name
        = render partial: 'shared/tab_navigation' if show_tabs?
        = yield
= render partial: "shared/loginout"
= render template: "layouts/moj_internal_template"
