    <%= button_tag('Send review period closure emails', class: 'button') %>
  <% end %>
<% else %>
  <%= form_tag admin_introductory_mailings_path, method: :post do %>
    <%= button_tag('Send introduction emails', class: 'button') %>
  <% end %>
<% end %>
