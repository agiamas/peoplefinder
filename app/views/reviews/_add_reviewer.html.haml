%h2= role_translate(@reviews.any? ? :some : :none, scope: 'views.reviews.add_reviewer_title')

= simple_form_for [@subject, @review].compact do |f|
  = f.input :author_name, as: :string
  = f.input :author_email, as: :string
  = f.input :relationship, as: :string
  = f.input :invitation_message, as: :text
  = f.button :submit
