%h2= t('views.replies.index_title')

%p= t('views.replies.index_standfirst', count: @replies.count)

%table.feedback-requests
  %thead
    %tr
      %th= t('name', scope: 'views.replies.list.headers')
      %th= t('status', scope: 'views.replies.list.headers')
      %th= t('action', scope: 'views.replies.list.headers')
  %tbody
    - @replies.each do |reply|
      %tr{ class: "#{ cycle('stripe', '') }" }
        %td.name= reply.subject_name
        %td{ class: "review-status review-status-#{ reply.status }" }
          %span{ class: "indicator-dot" }
          =t(reply.status, scope: 'reviews.statuses')
        %td.action= render partial: reply.status.to_s, locals: { reply: reply }
