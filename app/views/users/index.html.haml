%h2= t('index_title', scope: 'views.users')

%p= t('index_standfirst', scope: 'views.users', count: @users.length)

%table#users
  %thead
    %tr
      %th= t('list.name_header', scope: 'views.users')
      %th= t('list.status_header', scope: 'views.users')
  %tbody
    - @users.each do |user|
      %tr{ class: "#{ cycle('stripe', '') }" }
        %td.name= link_to(user, [user, :reviews])
        %td{ class: "review-completion-#{ user.review_completion.description }" }
          %span{ class: "indicator-dot" }
          =t('completion', scope: 'helpers.reviews', submitted: user.review_completion.completed, total: user.review_completion.total)
